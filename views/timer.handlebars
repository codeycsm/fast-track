<link rel="stylesheet" href="/css/timer.css">

    <div class="valign-wrapper row">
        <div id="timer-container" class="timer-container col xl5 l6 m9 s12" style="display: none;">
            <div class="row">
                <div class="col s8">
                    <h3 id="header" class="duration-header">Fast Duration</h3>
                </div>
                <div id="logout" class="col s2">
                    <i class="medium material-icons custom-icon">navigate_before</i>
                </div>
                <div id="assessment" class="col s2">
                    <i class="medium material-icons custom-icon">assessment</i>
                </div>
            </div>
            <div id="scheduler" style="display: none;">
                <div class="row quick-buttons-row">
                    <button id="16hr" class="waves-effect waves-light btn col s6">16 hr</button>
                    <button id="24hr" class="waves-effect waves-light btn col s6">24 hr</button>
                </div>
                <ul class="collapsible custom-dropdown">
                    <li>
                        <div class="collapsible-header custom-dropdown-header"><i class="material-icons">keyboard_arrow_down</i>Custom</div>
                        <div class="collapsible-body custom-dropdown-body">
                            <div class="row">
                                <div class="input-field col s4">
                                    <input id="custom_min" type="text" class="validate">
                                    <label for="custom_min">Min</label>
                                </div>
                                <div class="input-field col s4">
                                    <input id="custom_hr" type="text">
                                    <label for="custom_hr">Hr</label>
                                </div>
                                <div class="input-field col s4">
                                    <input id="custom_day" type="text">
                                    <label for="custom_day">Day</label>
                                </div>
                            </div>
                            <div class="row">
                                <button id="custom" class="waves-effect waves-light btn col s12">Start</button>
                            </div>
                        </div>
                    </li>
                </ul>
            </div>
            <div id="timer">
                <div class="row">
                    <div class="col s12 display-time-container">
                        <h2 id="time_left" class="display-time"></h2>
                    </div>
                </div>
                <div class="row">
                    <div class="col s12">
                        <button id="end_fast" class="waves-effect waves-light btn col s12">Finish early</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

<script src="/js/timer.js"></script>